{
  "name": "app_bundling_webpack",
  "version": "1.0.0",
  "description": "a simple typescript based app to try out application bundling using webpack",
  "main": "index.js",
  "scripts": {
    "view:app": "live-server --open=./build --browser=chrome",
    "clean:folder": "del-cli dist build",
    "clean:js": "del-cli dist/**/*.js dist/**/*.map",
    "build": "npm run clean:js && tsc",
    "build:source": "npm run build && webpack",
    "build:app": "npm run build:source && npm run view:app"
  },
  "keywords": [
    "typescript",
    "bundling",
    "webpack"
  ],
  "author": "pachumon",
  "license": "ISC",
  "devDependencies": {
    "@types/jquery": "^3.3.1",
    "@types/lodash": "^4.14.107",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "html-webpack-plugin": "^3.2.0",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "lodash": "^4.17.5"
  }
}
